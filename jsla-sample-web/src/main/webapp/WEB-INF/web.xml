<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <filter>
        <filter-name>SlaFilter</filter-name>
        <filter-class>org.jsla.web.jee5.SlaFilter</filter-class>
        <init-param>
	      <param-name>sla.monitor.provider</param-name>
	      <param-value>org.jsla.web.jee5.UsernameGroupMonitorFactory</param-value>
	    </init-param>
	     <init-param>
	      <param-name>sla.authority.provider</param-name>
	      <param-value>org.jsla.web.authority.HttpBasicAuthorityProvider</param-value>
	    </init-param>
    </filter>
    <filter-mapping>
          <filter-name>SlaFilter</filter-name>
          <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
